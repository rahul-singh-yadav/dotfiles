{
    "name": "dev-env",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
        "ghcr.io/cirolosapio/devcontainers-features/alpine-git:0": {},
        "ghcr.io/cirolosapio/devcontainers-features/alpine-jq:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-ohmyzsh:0": {},
		"ghcr.io/hspaans/devcontainer-features/ansible-lint:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/ansible:2": {
			"version": "latest"
		}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.tabSize": 4
            },
            "extensions": [
                "redhat.ansible",
                "hashicorp.terraform",
                "AmazonWebServices.aws-toolkit-vscode",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "rahul",
    "workspaceFolder": "/home/rahul"
}